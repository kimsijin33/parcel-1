#!/bin/bash

do_provision() {
  $SNAP/bin/snapcraft-preload \
    ansible-playbook \
      -i $SNAP/ansible/inventory.yml \
      -i $SNAP/bin/inventory.py \
      --extra-vars @$SNAP_DATA/tls-snakeoil-key \
      $SNAP/ansible/site.yml --diff \
        2>&1 > $SNAP_DATA/provision.log

  echo -e "\nLog written at $(date)" >> $SNAP_DATA/provision.log
}

N=0
while [ 1 ]; do
  if [ -e $SNAP_DATA/do-provision ]; then
    if do_provision; then
      rm $SNAP_DATA/do-provision
    fi
  fi

  # Once every hour
  if [[ "$(( $N % 60 ))" == "0" ]]; then
    do_provision
  fi

  sleep 10
  N=$(( $N + 1 ))
done
