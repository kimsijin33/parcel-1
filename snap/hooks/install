#!/bin/bash

cat <<EOF > $SNAP_DATA/haproxy.cfg
listen stats
  bind *:8080
  mode http
  stats enable
  stats hide-version
  stats auth admin:password
  stats uri /
EOF

echo "
Please give the system a minute to run and check back again.
For logs see $SNAP_DATA/provision.log
" > $SNAP_DATA/config-view
